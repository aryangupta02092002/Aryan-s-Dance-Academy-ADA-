extends base.pug

block scripts
    script(src="/static/style.css")

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us   
        form(action="/contact", method="post", class="myForm")   
            input(type="text", class="myInput", name="name", placeholder="Enter you name ")
            input(type="phone", class="myInput", name="mobile", placeholder="Mobile No.")
            input(type="email", class="myInput", name="email", placeholder="Email Id.")
            input(type="text", class="myInput", name="address", placeholder="Address ")
            input(type="text", class="myInput", name="desc", placeholder="Dance Form Interested In")
            button.btn 
                | Submit